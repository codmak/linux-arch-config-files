# ~/.tmux.conf
# Description: Minimal, vim-like, keyboard-centric tmux config
# Author     : codmak
# Date       : 2025-08-04
# Version    : 1.0

# -----------------------------
# Options
# -----------------------------

set -g prefix C-a
unbind C-b
bind C-a send-prefix

set -g automatic-rename on
set -g base-index 1
set -g pane-base-index 1
set -g history-limit 10000
set -g default-terminal "tmux"
set -g escape-time 0
set -g set-titles on
set -g mode-keys vi
set -g status-keys vi
set -g pane-border-lines simple
set -g pane-border-indicators colour
set -g pane-border-status off
set -g cursor-style block

# Window title formatting
set -g window-status-current-format "#[fg=green]#W"

# -----------------------------
# Status bar
# -----------------------------

set -g status on
set -g status-bg black
set -g status-fg white
set -g status-interval 30
set -g status-left ""
set -g status-right "#(command -v acpi >/dev/null && acpi | cut -d, -f2) |%a %h %d|%H:%M"

# -----------------------------
# Keybindings
# -----------------------------

# Reload config
bind r source-file "$HOME/.tmux.conf" \; display-message ".tmux.conf reloaded"

# Copy mode
unbind [
bind Escape copy-mode

# Vim-like pane movement
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# CMUS controls (if available)
if-shell "command -v cmus-remote >/dev/null" {
  bind \{ run "cmus-remote -r"
  bind \} run "cmus-remote -n"
}

# Screen recorder shortcut (if available)
if-shell "[ -x $HOME/.local/bin/record_screen.sh ]" \
  'bind v run-shell "$HOME/.local/bin/record_screen.sh"'
